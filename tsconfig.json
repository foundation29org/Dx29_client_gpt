{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "skipLibCheck": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "removeComments": true,    // Añadido para reducir tamaño
    "noEmitOnError": true,    // Añadido para mejor build
    "allowSyntheticDefaultImports": true, // Mejor manejo de imports
    //"noUnusedLocals": true
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": false,
    "enableIvy": true,         // Asegura que Ivy está habilitado
    "fullTemplateTypeCheck": true, // Mejor optimización de templates
    "strictInjectionParameters": true,
    "compilationMode": "partial" // Mejor rendimiento en build
  }
}
